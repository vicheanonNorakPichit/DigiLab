<!-- include header -->
<%- include('../_header') %>
<!-- /include header -->

<main id="site-main">
  <div class="container">
    <div class="box-nav justify-between">
      <div class="container">
        <a href="/" class="btn">All Subject</a>
      </div>
      <div class="form-title text-center">
        <h2 class="text-dark">Update Subject</h2>
        <span class="text-light"
          >Use the below form to update the subject details</span
        >
      </div>
      <!-- form handling -->
      <form method="PUT" id="update_subject" class="update">
        <div class="new_user">
          <div class="form-group">
            <label for="name" class="text-light">Subject</label>
            <input type="hidden" name="subject_id" value="<%= subject._id %>" />
            <input
              type="text"
              name="subject_name"
              value="<%= subject.subject_name %>"
            />
          </div>
          <div class="form-group">
            <label for="name" class="text-light">Active</label>
            <div class="radio inline">
              <input type="radio" name="active" value="true" <%= subject.active
              == true ? 'checked' : '' %>/>
              <label for="active" class="text-light">true</label>
            </div>
            <div class="radio inline">
              <input type="radio" name="active" value="false" <%= subject.active
              == false ? 'checked' : '' %>/>
              <label for="active" class="text-light">false</label>
            </div>
          </div>
          <div class="form-group">
            <button class="btn text-dark update">Save</button>
          </div>
        </div>
      </form>
      <!--/ form handling -->
    </div>
  </div>
</main>

<!-- include footer -->
<%- include('../_footer') %>
<!-- /include footer -->
