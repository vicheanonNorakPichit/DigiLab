<!-- include header -->
<%- include('../_header') %>
<!-- /include header -->

<main id="site-main">
    <div class="container">
      <div class="box-nav justify-between">
        <div class="container">
          <a href="/" class="btn">All Subject</a>
      </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Subject</h2>
            <span class="text-light">Use the below form to update the subject details</span>
        </div>
        <!-- form handling -->
        <form method="PUT" id="add_subject">
            <div class="new_user">
              <div class="form-group">
                <label for="name" class="text-light">Subject</label>
                <input type="hidden" name="subject_id" value="" />
                <input type="text" name="subject_name" value="" placeholder="Chemistry" />
              </div>
              <div class="form-group">
                <label for="name" class="text-light">Active</label>
                <div class="radio inline">
                    <input type="radio" name="active" >
                    <label for="active" class="text-light">True</label>
                </div>
                <div class="radio inline">
                    <input type="radio" name="active" >
                    <label for="active" class="text-light">False</label>
                </div>
              </div>
              <div class="form-group">
                <button class="btn text-dark update">Save</button>
              </div>
            </div>
          </form>
        <!--/ form handling -->
      </div>
    </div>
  </main>

<!-- include footer -->
<%- include('../_footer') %>
<!-- /include footer -->