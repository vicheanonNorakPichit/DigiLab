<div class="table-title">
  <h3>Experiment List Table</h3>

  <a href="add-experiment" class="btn">Add Experiment</a>
</div>
<main>
  <div>
    <form action="">
      <table class="table">
        <thead>
          <tr>
            <th>NO</th>
            <th>Experiment</th>
            <th>Grade</th>
            <th>Chapter</th>
            <th>Lesson</th>
            <th>Subject</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i<experiments.length; i++) { %>
                <tr>
                <td><%= i+1%></td>
                <td><%= experiments[i].experiment_name %></td>
                <td><%= experiments[i].grade %></td>
                <td><%= experiments[i].chapter %></td>
                <td><%= experiments[i].lesson %></td>
                <td><%= experiments[i].subject %></td>
                <td>
                    <a href="update-experiment?experiment_id=<%= experiments[i]._id%>" class="btn border-shadow update">
                    <span class="text-gradient">edit</span>
                    </a>
                    <a href="#" class="btn border-shadow delete" data-id=<%= experiments[i]._id %>>
                    <span class="text-gradient">delete</span>
                    </a>
                </td>
                </tr>
                <% console.log(experiments[i]) %>
            <% } %>
        </tbody>
      </table>
    </form>
  </div>
</main>
